<Window x:Class="Playground.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Playground"
        xmlns:charts="clr-namespace:Playground.Charting"
        mc:Ignorable="d" Topmost="True"
        Background="Black"
        Foreground="Aqua"
        Loaded="Window_Loaded" WindowStartupLocation="CenterScreen"
        Title="MainWindow" Width="300" Height="400">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <GroupBox Header="Vectors from Database" BorderThickness="0">
            <ListBox x:Name="LstVectors" 
                         ItemsSource="{Binding Data.Vectors, IsAsync=True, UpdateSourceTrigger=PropertyChanged}"
                         Background="Transparent"
                         Foreground="White"
                         BorderThickness="0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                        <Run Text="{Binding Freq, Mode=OneWay}"/>
                        <Run Text="{Binding Pol, Mode=OneWay}"/>
                        </TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

        <GroupBox Grid.Column="1" Header="Plot Options" BorderThickness="0">
            <StackPanel IsEnabled="{Binding ElementName=LstVectors, Path=SelectedItems.Count}">
                <Button Content="Create Polar" Tag="{x:Type charts:DrawPolar}" Click="Draw_Clicked"/>
                <Button Content="Create XY" Tag="{x:Type charts:DrawXY}" Click="Draw_Clicked"/>
            </StackPanel>
        </GroupBox>

    </Grid>
</Window>
